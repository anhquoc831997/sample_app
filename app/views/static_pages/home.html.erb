<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
      <div class="col-md-8">
      <h3><%= t("micropost_feed")%></h3>
      <%= render "shared/feed" %>
    </div>
    </aside>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t ".sample" %></h1>
  <h2>
    <%= t ".home_html", href: link_to(t(".home_href"), t("rubyonrails_link")) %>
  </h2>
  <%= link_to t("signup"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag(t("rails_img"), alt: t("rails_logo")),  t("rubyonrails_link") %>
<% end %>
